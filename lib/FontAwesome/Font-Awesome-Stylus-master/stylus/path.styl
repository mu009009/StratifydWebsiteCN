/*! FONT PATH
 * -------------------------- */

@font-face
  font-family 'FontAwesome'
  src url($fa-font-path + '/icomoon.eot?v=' + $fa-version)
  src url($fa-font-path + '/icomoon.eot?#iefix&v=' + $fa-version) format('embedded-opentype'), \
    url($fa-font-path + '/icomoon.woff?v=' + $fa-version) format('woff'), \
    url($fa-font-path + '/icomoon.ttf?v=' + $fa-version) format('truetype'), \
    url($fa-font-path + '/icomoon.svg?v=' + $fa-version + '#fontawesomeregular') format('svg')
  // src url($fa-font-path + '/FontAwesome.otf') format('opentype') // used when developing fonts
  //Test
  font-weight normal
  font-style normal
